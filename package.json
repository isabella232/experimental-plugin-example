    "autoprefixer": "^7.2.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-styled-components": "^1.9.2",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
